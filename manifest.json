  {
    "name": "Reskipe",
    "version": "0.0.0.1",
    "description": "Skip the nonsense, get right to the recipe!",
    "manifest_version": 2,
    "browser_action": {
      "default_icon": "recipe-book.png"
     },
     "permissions": [
      "activeTab"
      ],
      "content_scripts": [
        {
          "matches": [
            "<all_urls>"
          ],
          "js": ["popup.js"]
        }
      ]
  }